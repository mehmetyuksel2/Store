@page
@model StoreApp.Pages.DemoModel;

@{
}

<div class="my-5 text-center">
    <div class="display-6">Hello @Model?.FullName</div>
    <p class="text-danger">@HttpContext.Session.GetString("name")</p>
    <div class="form-group">
        <form method="post" asp-page="/demo">
            <input placeholder="Enter your name" type="text" name="name" class="form-control">
            <button type="text" class="btn btn-primary my-3">Save</button>
        </form>
    </div>
</div>