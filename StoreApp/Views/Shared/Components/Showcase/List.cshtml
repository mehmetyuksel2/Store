@model IEnumerable<Product>

<div>
    <h6 class="display-6">Products</h6>
</div>


<div class="row">
    @foreach (var prd in Model)
    {
        <div class="col-md-3 my-3 text-center">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@prd.ProductName</h5>
                    <p class="card-title">@prd.Price</p>
                    <p class="card-text">@prd.Summary</p>
                    <a asp-controller="Product" asp-action="Update" class="btn btn-primary">Edit</a>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div class="form-check form-switch">
                        <input type="hidden" name="productId" value="@prd.ProductId" />
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"
                            checked="@prd.ShowCase" disabled/>
                        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>

                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>