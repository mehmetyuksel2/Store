@using StoreApp.infrastructure.Extensions
@{
    Layout = "_Layout"; // _ViewStart.cshtml deki importu yoksay
}
@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img src="@Model?.ImageUrl" class="img-fluid shadow rounded-3 p-5 my-3" alt="@Model.ProductName">
            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>
    <p>
        @Model.Price
</p>
<div class="text-center">
    <div class="btn-group">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i>
        Home</a>
        <form id="@Model.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-outline-secondary rounded-0">
                <i class="fa fa-cart-plus"></i>
                Add To Cart
            </button>       
        </form>
        <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index"><i class="fa-solid fa-list"></i>
        Product</a>
    </div>
</div>
@section Header{
    <div>
        Only for get header
    </div>
}