@model IEnumerable<IdentityUser>

<div class="text-center">
    <div class="display-6">
        Create
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach(IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role=""></td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Update" asp-route-id="@user.UserName" class="btn btn btn-warning">Update</a>
                        <a asp-action="ResetPassword" asp-route-id="@user.UserName" class="btn btn btn-info">Reset Password</a>
                        <form asp-action="DeleteOneUser" method="post">
                            <input type="hidden" name="UserName" value="@user.UserName" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>