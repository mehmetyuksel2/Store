@model IEnumerable<IdentityRole>



<div class="text-center my-5">
    <div class="display-6">
        Roles
    </div>
</div>
<div class="row">
        <table class="table table-hover my-5">
            <thead>>
                <th>Id</th>
                <th>Role</th>
                <th>Action</th>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            @role.Id
                        </td>
                        <td>
                            @role.Name
                        </td>
                        <td>
                        <a asp-action="DeleteRole" asp-route-Name="@role.Name" class="btn btn-danger">Delete</a>
                            <a asp-action="Update" class="btn btn-danger">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>