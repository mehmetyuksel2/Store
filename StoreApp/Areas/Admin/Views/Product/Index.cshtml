
@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>
    
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        @foreach(Product prd in Model)
            {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>
                        <img class="border border-light rounded" src="@prd?.ImageUrl" alt="@prd.ProductName" width="50">
                    </td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Update" asp-route-id="@prd.ProductId" class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                                Edit</a>
                            <a asp-action="Delete" asp-route-id="@prd.ProductId" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                                Delete</a>
                            <a asp-action="Update" target="_blank" asp-area="" asp-route-id="@prd.ProductId" class="btn btn-info">
                                <i class="fa fa-search"></i>
                                Web</a>
                                @*admin paneldeyken areadan çıkıp web tarafındaki ürün ayrıntısını açar*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
